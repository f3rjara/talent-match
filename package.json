{
  "name": "arquetipo-angular-standalone",
  "version": "0.0.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "prod": "ng build --base-href=/",
    "prepare": "ng lint && eslint --fix && husky install",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --coverageReporters=text",
    "test:staged": "jest --coverage --build --findRelatedTests --passWithNoTests",
    "lint": "ng lint",
    "lint-all": "eslint --fix",
    "lint:watch": "nodemon --exec \"npm run lint || exit 1\" --ext ts,html,scss"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.14",
    "@angular/common": "^18.2.14",
    "@angular/compiler": "^18.2.14",
    "@angular/core": "^18.2.14",
    "@angular/forms": "^18.2.14",
    "@angular/platform-browser": "^18.2.14",
    "@angular/platform-browser-dynamic": "^18.2.14",
    "@angular/router": "^18.2.14",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "primeflex": "^3.3.1",
    "primeicons": "^7.0.0",
    "primeng": "^17.18.13",
    "rxjs": "~7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-builders/jest": "^18.0.0",
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular-eslint/builder": "18.4.2",
    "@angular-eslint/eslint-plugin": "18.4.2",
    "@angular-eslint/eslint-plugin-template": "18.4.2",
    "@angular-eslint/schematics": "18.4.2",
    "@angular-eslint/template-parser": "18.4.2",
    "@angular/cli": "~18.2.21",
    "@angular/compiler-cli": "^18.2.14",
    "@compodoc/compodoc": "^1.1.23",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.4.2",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "ts-node": "^10.9.1",
    "typescript": "~5.4.5"
  }
}
